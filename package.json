{
    "name": "moosedanceproductions",
    "description": "Official MooseDance Productions Website",
    "author": "freddyroberts9@gmail.com",
    "version": "2.1.3",
    "private": true,
    "scripts": {
        "build": "npm-run-all --serial clean --parallel copy js css templates",
        "build:prod": "cross-env NODE_ENV=production npm run build",
        "clean": "del-cli httpdocs",
        "copy": "npm-run-all --parallel copy:**",
        "copy:img": "cpx \"resources/assets/img/**/*.{jpg,jpeg,gif,png,svg,ico}\" httpdocs/assets/images",
        "copy:fonts": "cpx \"resources/assets/fonts/**/*.js\" httpdocs/assets/fonts",
        "copy:jslibs": "cpx \"resources/assets/js/libs/*.js\" httpdocs/assets/js/libs",
        "copy:csslibs": "cpx \"resources/assets/css/libs/*.css\" httpdocs/assets/css/libs",
        "css": "postcss -c build/postcss.config.js",
        "js": "rollup -c build/rollup.config.js",
        "publish": "bash ./build/publish.sh",
        "postversion": "git push --set-upstream origin production build && git push --tags",
        "serve": "browser-sync start -c build/browsersync.config.js",
        "test": "cross-env NODE_ENV=production npm run build",
        "templates": "gulp",
        "templates:watch": "gulp watch",
        "watch": "npm-run-all build --parallel \"js -- --watch\" \"css -- --watch\" \"copy:img -- --watch\" templates:watch serve"
    },
    "devDependencies": {
        "browser-sync": "^2.18.5",
        "classlist-polyfill": "^1.2.0",
        "cpx": "^1.5.0",
        "cross-env": "^3.1.4",
        "cssnano": "^3.9.1",
        "del-cli": "^0.2.1",
        "dotenv": "^4.0.0",
        "gulp": "^3.9.0",
        "gulp-compile-handlebars": "^0.6.1",
        "gulp-htmlmin": "^3.0.0",
        "gulp-plumber": "^1.0.1",
        "gulp-rename": "^1.2.2",
        "gulp-util": "^3.0.7",
        "npm-run-all": "^4.0.0",
        "postcss": "^5.2.8",
        "postcss-browser-reporter": "^0.5.0",
        "postcss-cli": "^2.6.0",
        "postcss-cssnext": "^2.9.0",
        "postcss-import": "^9.0.0",
        "postcss-reporter": "^3.0.0",
        "project-sync": "^1.0.0",
        "rollup": "^0.39.2",
        "rollup-plugin-buble": "^0.15.0",
        "rollup-plugin-commonjs": "^7.0.0",
        "rollup-plugin-node-resolve": "^2.0.0",
        "rollup-plugin-replace": "^1.1.1",
        "rollup-plugin-uglify": "^1.0.1",
        "rollup-watch": "^3.1.0",
        "swiper": "^3.4.2"
    },
    "browserslist": [
        "last 2 versions"
    ]
}
